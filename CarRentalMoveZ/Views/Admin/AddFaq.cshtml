// ==============================
// Variables
// ==============================
$primary-color: #1e56a0;
$radius: 12px;
$shadow-lg: 0 10px 30px rgba(0, 0, 0, 0.08);

// ==============================
// Card
// ==============================
.card {
  border-radius: $radius;
  box-shadow: $shadow-lg;

  &-header {
    background-color: $primary-color;
    color: #fff;
    border-top-left-radius: $radius;
    border-top-right-radius: $radius;
  }
}

// ==============================
// Form elements
// ==============================
label {
  font-weight: 600;
  margin-bottom: 6px;
}

.form-control,
.form-select {
  border-radius: 8px;
  padding: 10px 12px;
  transition: border-color 0.2s ease, box-shadow 0.2s ease;

  &:focus {
    border-color: $primary-color;
    box-shadow: 0 0 0 0.15rem rgba(30, 86, 160, 0.25);
  }
}

// ==============================
// Buttons
// ==============================
.btn-primary-custom {
  background-color: $primary-color;
  color: #fff;
  border: none;
  font-weight: 600;
  border-radius: 8px;
  padding: 10px 20px;
  transition: all 0.25s ease;

  &:hover {
    background-color: darken($primary-color, 6%);
    transform: translateY(-1px);
  }
}

.btn-secondary {
  border-radius: 8px;
}
